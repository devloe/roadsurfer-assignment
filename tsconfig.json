{
  "include": [
    "./src/**/**.*",
    "globals.d.ts",
    "tests/setup.ts"
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
